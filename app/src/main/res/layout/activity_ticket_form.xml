<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rebus.llc.parvoz.TicketForm">
    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></WebView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutScreenShot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view2"
                android:layout_marginBottom="60dp"
                android:layout_weight="0.5"
                android:background="@drawable/green_click"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textViewsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить на телефоне"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorParvozOrange2"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/textFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"

                        android:paddingLeft="5dp"
                        android:text="Откуда: " />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/spinnerFrom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorParvozOrange2"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@android:drawable/arrow_down_float" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFrom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/colorParvozOrange2"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/airoportFrom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:text="Домодедово" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorParvozOrange2"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/textTo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Куда: " />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/spinnerTo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorParvozOrange2"
                            android:spinnerMode="dialog" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@android:drawable/arrow_down_float" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/colorParvozOrange2"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/airoportTo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:text="Домодедово" />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="10dp"
                    android:layout_row="7"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="1dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="126dp">

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Дата вылета"
                        android:inputType="text|textCapWords"
                        android:text="12-12-2019"
                        android:textColor="@color/colorParvozOrange" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editTextTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Время вылета"
                        android:inputType="text|textCapWords"
                        android:text="23:23"
                        android:textColor="@color/colorParvozOrange" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="10dp"
                    android:layout_row="7"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="1dp"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="126dp">

                    <EditText
                        android:id="@+id/editTextCost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Цeна билета"
                        android:inputType="text|textCapWords"
                        android:text=""
                        android:textColor="@color/colorParvozOrange" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewNomerRejsa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="10dp"
                    android:layout_row="7"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="1dp"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="126dp">

                    <EditText
                        android:id="@+id/editTextNomerRejsa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Номер рейса"
                        android:inputType="text|textCapWords"
                        android:text=""
                        android:textColor="@color/colorParvozOrange" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewNomerBileta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="10dp"
                    android:layout_row="7"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="1dp"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="126dp">

                    <EditText
                        android:id="@+id/editTextNomerBileta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Номер билета"
                        android:inputType="text|textCapWords"
                        android:text=""
                        android:textColor="@color/colorParvozOrange" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:hint="ФИО"
                        android:inputType="text|textCapWords"
                        android:text="Аблакулов Азим"
                        android:textColor="@color/colorParvozOrange" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewPasportGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editTextGender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:hint="Пол"
                        android:inputType="text|textCapWords"
                        android:text="Женский"
                        android:textColor="@color/colorParvozOrange" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewBD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editTextBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:hint="Дата рождения"
                        android:inputType="text|textCapWords"
                        android:text="12-12-2001"
                        android:textColor="@color/colorParvozOrange" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/viewPasportNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editTextPasportNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:hint="Серия и номер паспорта"
                        android:inputType="text|textCapWords"
                        android:text="3432423"
                        android:textColor="@color/colorParvozOrange" />
                </android.support.design.widget.TextInputLayout>
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Обязательно загрузить паспорт"/>

                <LinearLayout
                    android:id="@+id/addNewDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/purple_click"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_input_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="Добавить снимок паспорта"
                        android:textColor="@color/colorParvozWhite" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/IdProf"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_photo" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recvisits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorParvozPerple2"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="реквизиты для оплаты" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutCencelTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/view2"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/orange_click"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textViewCencelTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Отменить билет"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/cardview_light_background" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/linearLayoutCencel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view2"
            android:layout_weight="0.5"
            android:background="@drawable/purple_click"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закрыть"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view2"
            android:layout_weight="0.5"
            android:background="@drawable/orange_click"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/cardview_light_background" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>